<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/attached_photo_size"
    android:layout_height="@dimen/attached_photo_size"
    android:layout_margin="@dimen/attached_photo_item_margin">

    <ImageView
        android:id="@+id/attached_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detach_photo_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:background="#40000000"
        android:src="@drawable/outline_close_24"
        app:tint="@color/light_skin" />

</FrameLayout>